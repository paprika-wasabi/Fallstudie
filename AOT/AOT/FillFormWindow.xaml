<Window x:Class="AOT.FillFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AOT"
        mc:Ignorable="d"
        Title="FillFormWindow" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="0,10,0,0" Width="370">
            <TextBlock Text="Budget:"/>
            <TextBox x:Name="BudgetBox" Margin="0,5,0,15"/>

            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameBox" Margin="0,5,0,15"/>
            
            <TextBlock Text="Projektleiter:"/>
            <TextBox x:Name="LeaderBox" Margin="0,5,0,15"/>

            <TextBlock Text="Abteilung:"/>
            <TextBox x:Name="DepartmentBox" Margin="0,5,0,15"/>

            <TextBlock Text="Projektart:"/>
            <TextBox x:Name="TypeBox" Margin="0,5,0,15"/>

            <TextBlock Text="Mitglied"></TextBlock>
            <TextBox x:Name="MemberBox" Margin="0,5,0,15"/>
            <Button Content="Submit" Width="100" HorizontalAlignment="Center" Click="SubmitForm_Click"/>
        </StackPanel>
    </Grid>
</Window>
