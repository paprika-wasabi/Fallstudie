<Window x:Class="AOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AOT"
        mc:Ignorable="d"
        Title="AOT" Height="620" Width="980">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#333" VerticalAlignment="Stretch">
            <Button Content="Dashboard" Click="DashboardButton_Click" Margin="10"/>
            <Button Content="Projekte" Click="HomeButton_Click" Margin="10"/>
            <Button Content="Ausstehende" Click="PendingButton_Click" Margin="10"/>
            <!-- Add more buttons here -->
        </StackPanel>
        <ContentControl x:Name="MainContent" Grid.Column="1" />
        
    </Grid>
</Window>
