<Window x:Class="AOT.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AOT"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300">
    
    <StackPanel Margin="10,20,0,0">
        <StackPanel Orientation="Horizontal">
            <TextBlock>Username:</TextBlock>
            <TextBox x:Name="UsernameBox" Margin="10,0,0,0" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <TextBlock>Password:</TextBlock>
            <PasswordBox x:Name="PasswordBox" Margin="14,0,0,0" Width="200"/>
        </StackPanel>
        <Button Margin="0,20,0,0" Content="Login" Click="Login_Click" Width="100"/>
    </StackPanel>
</Window>
